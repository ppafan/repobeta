<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Trive\Revo\Block\Slider" name="productslider.cart.content.top" before="-">
                <action method="setSliderLocation">
                    <argument name="location" xsi:type="string">cart-content-top</argument>
                </action>
            </block>
            <block class="Trive\Revo\Block\Slider" name="productslider.cart.content.bottom" after="-">
                <action method="setSliderLocation">
                    <argument name="location" xsi:type="string">cart-content-bottom</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>