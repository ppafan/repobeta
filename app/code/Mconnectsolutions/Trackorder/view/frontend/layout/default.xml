<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceBlock name="header.links">
			<block class="Magento\Framework\View\Element\Html\Link" name="track-link" ifconfig="Mconnectsolutions_trackorder/track_order/top_link">
				<arguments>
					<argument name="label" xsi:type="string" translate="true">Track Order</argument>
					<argument name="path" xsi:type="string" translate="true">trackorder</argument>
				</arguments>
			</block>	
		</referenceBlock>
		
		
		<referenceBlock name="top.links">
            <block class="Magento\Framework\View\Element\Html\Link" name="track-link" before="authorization-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Track Order</argument>
					<argument name="path" xsi:type="string" translate="true">trackorder</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>